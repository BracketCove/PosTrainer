<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/colorPrimary"
                                                   android:layout_height="88dp">


    <ImageView
            style="@style/MovementIcon"
            app:srcCompat="@drawable/ic_chest"
            android:id="@+id/imvItemIconOne"
            app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            app:layout_constraintStart_toEndOf="@+id/imvMovementItemThumb" android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            style="@style/MovementIcon"
            app:srcCompat="@drawable/ic_arm"
            android:id="@+id/imvItemIconTwo"
            app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            app:layout_constraintStart_toEndOf="@+id/imvItemIconOne"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            style="@style/MovementIcon"
            app:srcCompat="@drawable/ic_shoulders"
            android:id="@+id/imvItemIconThree"
            app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            app:layout_constraintStart_toEndOf="@+id/imvItemIconTwo"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            style="@style/MovementIcon"
            app:srcCompat="@drawable/ic_back"
            android:id="@+id/imvItemIconFour"
            app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            app:layout_constraintStart_toEndOf="@+id/imvItemIconThree"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            style="@style/MovementIcon"
            android:layout_width="36dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_abdomen"
            android:id="@+id/imvItemIconFive"
            app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            app:layout_constraintStart_toEndOf="@+id/imvItemIconFour"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/imvMovementItemThumb"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <View
            android:id="@+id/divMovementWidgetOne"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_white"
            app:layout_constraintStart_toEndOf="@+id/imvMovementItemThumb"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="104dp" app:layout_constraintTop_toBottomOf="@+id/lblMovementItemName"
            android:layout_marginTop="2dp"/>

    <TextView
            style="@style/MovementText.Header"
            android:id="@+id/lblMovementItemName"
            android:text="Passive Hang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="bottom" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imvMovementItemThumb" android:layout_marginStart="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>