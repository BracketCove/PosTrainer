<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ImageView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/imvMovement" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tlbMovement"
            app:layout_constraintBottom_toBottomOf="@+id/lblMovementName"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/ALPHA_BLACK"
                    android:orientation="horizontal"
                    android:id="@+id/tlbMovement">

        <ImageButton
                style="@style/Widget.AppCompat.ActionButton"
                android:src="@drawable/ic_menu_black_24dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:paddingStart="8dp"
                android:tint="@color/WHITE"
                android:id="@+id/imvMovementMenu"
        />

        <ImageButton
                style="@style/Widget.AppCompat.ActionButton"
                android:src="@drawable/ic_subscriptions_black_24dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:paddingEnd="8dp"
                android:tint="@color/WHITE"
                android:id="@+id/imvMovementYoutube"
        />

    </RelativeLayout>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:padding="8dp"
            tools:text="Passive Hang"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:elevation="4dp"
            android:background="@color/ALPHA_BLACK"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/lblMovementName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"/>

    <TextView
            style="@style/MovementText.Header"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="@string/description"
            android:id="@+id/lblDescriptionHeader"
            app:layout_constraintTop_toBottomOf="@+id/imvMovement"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/lblDescriptionContent" />

    <TextView
            style="@style/MovementText.Content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/lblDescriptionContent"
            app:layout_constraintTop_toBottomOf="@+id/lblDescriptionHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/lorem/random" android:padding="8dp"
            android:fontFamily="sans-serif-condensed" android:textColor="@color/WHITE"
            app:layout_constraintBottom_toTopOf="@+id/lblInstructionHeader" app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            style="@style/MovementText.Header"
            android:text="@string/instructions"
            android:layout_width="0dp"
            android:id="@+id/lblInstructionHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lblInstructionContent"
            app:layout_constraintTop_toBottomOf="@+id/lblDescriptionContent"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            style="@style/MovementText.Content"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/lblInstructionContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/lorem/random" android:padding="8dp"
            android:fontFamily="sans-serif-condensed" android:textColor="@color/WHITE"
            app:layout_constraintBottom_toTopOf="@+id/imvTargets"
            app:layout_constraintTop_toBottomOf="@+id/lblInstructionHeader" app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            style="@style/MovementIcon"
            android:src="@drawable/ic_gps_fixed_white_24dp"
            android:id="@+id/imvTargets"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imvDifficulty"
            app:layout_constraintTop_toBottomOf="@+id/lblInstructionContent"/>

    <ImageView
            style="@style/MovementIcon"
            android:src="@drawable/ic_star_half_black_24dp"
            android:id="@+id/imvDifficulty"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imvTargets"
    />
    <TextView
            style="@style/MovementText.Header.Sub"
            android:text="TextView"
            tools:text="Chest, Back, Arms"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/imvTargets"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/imvTargets"
            app:layout_constraintBottom_toBottomOf="@+id/imvTargets"/>
    <TextView
            style="@style/MovementText.Header.Sub"
            android:text="TextView"
            tools:text="Easy"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/imvDifficulty"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/imvDifficulty"
            app:layout_constraintBottom_toBottomOf="@+id/imvDifficulty"/>
</androidx.constraintlayout.widget.ConstraintLayout>